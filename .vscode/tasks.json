{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Deploy b-l475e-iot01a",
            "type": "shell",
            "command": "openocd -f board/stm32l4discovery.cfg -c \"program b-l475e-iot01a/Debug/src/projects/ST/b-l475e-iot01a/iot-middleware-skytree.elf verify\" -c \"reset halt\" -c shutdown",
            "windows": {
                "options": {
                  "shell": {
                      "executable": "cmd.exe",
                      "args": ["/c"]
                  }
                }
              },
            "problemMatcher": [],
            "dependsOn": [ "Build b-l475e-iot01a" ]
        },
        {
            "label": "Download FreeRTOS",
            "type": "shell",
            "isBackground": false,
            "windows" : {
                "command": "powershell .github/scripts/fetch_freertos.ps1 libs/FreeRTOS",
            },
            "linux" : {
                "command": ".github/scripts/fetch_freertos.sh libs/FreeRTOS"
            }
        },
        {
            "label": "Copy driver files",
            "type": "shell",
            "isBackground": false,
            "windows" : {
                "command": "powershell.exe",
                "args": [
                    "-Command",
                    "& '${workspaceRoot}\\src\\driver_override\\stm32_drivers_overwrite.bat'"
                ]
            },
            "dependsOn": [ "Build b-l475e-iot01a" ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Configure b-l475e-iot01a",
            "type": "shell",
            "command": "cmake -G Ninja -DFREERTOS_PATH=${workspaceRoot}/libs/FreeRTOS -DVENDOR=ST -DBOARD=b-l475e-iot01a -DCMAKE_BUILD_TYPE=Debug -Bb-l475e-iot01a/Debug ${workspaceRoot}",
            "dependsOn": [ "Download FreeRTOS" ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Build b-l475e-iot01a",
            "type": "shell",
            "windows": {
                "command": "powershell.exe",
                "args": [
                    "-Command",
                    "& '${workspaceRoot}\\src\\driver_override\\stm32_drivers_overwrite.bat'; cmake --build ${workspaceRoot}\\b-l475e-iot01a\\Debug"
                ]
            },
            "dependsOn": [ "Configure b-l475e-iot01a" ],
            "dependsOrder": "sequence"
        }
    ]
}
