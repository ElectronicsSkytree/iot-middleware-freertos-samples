{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "STM L475E: Local Debug OpenOCD",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "device": "STM32L475VG",
            "runToMain": true,
            "executable": "${workspaceFolder}/b-l475e-iot01a/Debug/src/projects/ST/b-l475e-iot01a/iot-middleware-skytree.elf",
            "svdFile": "${workspaceFolder}/.vscode/STM32L4x5.svd",
            "cwd": "${workspaceRoot}",
            "configFiles": [
                "board/stm32l4discovery.cfg"
            ],
            "preLaunchTask": "Build and Deploy b-l475e-iot01a"
        }
    ],
    "inputs": [
        {
            "id": "device.host",
            "type": "promptString",
            "default": "localhost:3333",
            "description": "The local hostname with port for GDB to connect to"
        }
    ]
}
